class Solution {
public:
    int arrayPairSum(vector<int>& nums) {
       if(nums.size()==0) return 0;
        int n=nums.size();
        sort(nums.begin(),nums.end());
        int res=0;
        for(int i=n;i>1;)
        {
            res+=min(nums[i-1],nums[i-2]);
            i-=2;
        }
        return res;
    }
};
